{
  "name": "sillyport-runtime",
  "version": "1.0.0",
  "description": "SillyTavern Browser Runtime - A browser-based runtime for SillyTavern character management and chat functionality",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --config jest.config.node.js",
    "test:watch": "jest --config jest.config.node.js --watch",
    "test:coverage": "jest --config jest.config.node.js --coverage",
    "test:browser": "jest --config jest.config.js",
    "test:browser-html": "echo 'Open browser-tests.html in a web browser to run browser-specific tests'",
    "test:all": "npm test && echo 'Node.js tests completed. Run browser tests with: npm run test:browser'",
    "test:node": "npm test",
    "test:node:watch": "npm run test:watch",
    "test:node:coverage": "npm run test:coverage",
    "build": "webpack --config webpack.config.js",
    "dev": "echo 'Development server not yet implemented'"
  },
  "keywords": [
    "sillytavern",
    "browser",
    "runtime",
    "character",
    "chat",
    "ai"
  ],
  "author": "KarmaLabsAI",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-loader": "^10.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^24.12.1",
    "webpack": "^5.100.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KarmaLabsAI/SillyPort-Runtime.git"
  },
  "bugs": {
    "url": "https://github.com/KarmaLabsAI/SillyPort-Runtime/issues"
  },
  "homepage": "https://github.com/KarmaLabsAI/SillyPort-Runtime#readme"
}
